[ req ]
default_bits       = 2048
prompt             = no
default_md         = sha256
req_extensions     = req_ext
distinguished_name = req_distinguished_name

[ req_distinguished_name ]
C  = US
ST = Massachusetts
L  = Bedford
O  = Personal
OU = Personal
emailAddress = example@example.com
CN = localhost

[ req_ext ]
subjectAltName = @alt_names

[ alt_names ]
{% for dns in unique_sans %}
IP.{{ loop.index }} = {{ dns }}
{% endfor %}
